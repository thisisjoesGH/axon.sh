Main() {
  DefineConfiguration
  ReadConfiguration
  ReadEnvironment
  CreateFiles
  Log config "Log level set to '${config[log_level]}'"
  Log config "Verbosity set to '${config[verbosity]}'"
  GenDeviceId
  WriteConfiguration
  DefineStatusCodes
  DefineObjects
  DefineSynapseParams
  DefineSynapseEndpoints
  CheckDependencies
  if (( "$#" < 1 )); then
    PrintInfo short
    Prompt
  else
    HandleCommand "$@"
  fi
}

Main "$@"
