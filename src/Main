Main() {
  DefineConfiguration
  ReadConfiguration
  ReadEnvironment
  Log config "Log level set to '${config[log_level]}'"
  Log config "Verbosity set to '${config[verbosity]}'"
  GenDeviceId
  WriteConfiguration
  DefineStatusCodes
  CheckDependencies
  Motd
  if (( "$#" < 1 )); then
    Prompt
  else
    HandleCommand "$@"
  fi
}

Main "$@"
