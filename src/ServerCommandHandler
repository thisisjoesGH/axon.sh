ServerCommandHandler() {
  case "$@" in
    version ) SynapseVersion;;
    notice  ) SynapseServerNotice;;
    address ) if [ -z "${config[homeserver]}" ]; then Log error "No homeserver configured!"; else echo "${config[homeserver]}"; fi;;
    ''      ) Log error "Subcommand required.";;
    *       ) Log error "Unrecognized subcommand '$@'.";;
  esac
}
