ReadConfiguration() {
  Log debug "Reading configuration from file..."
  if [ -f "${config[config_path]}/${config[config_file]}" ]; then
    Log debug "Found configuration file."
    while read -r line
    do
      if echo "$line" | grep -F = &>/dev/null
      then
        varname=$(echo "$line" | cut -d '=' -f 1)
        config[$varname]=$(echo "$line" | cut -d '=' -f 2-)
      fi
    done < "${config[config_path]}/${config[config_file]}"
   Log config "Log level set to ${config[log_level]}"
  else
    Log warn "No configuration file found. Using defaults."
  fi
}
