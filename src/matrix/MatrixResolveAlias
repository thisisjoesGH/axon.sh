MatrixResolveAlias() {
  Log debug "Got args '$*'"

  if [[ "$1" == "create" ]]; then
    MatrixCreateAlias "$2" "$3" || return 1
    return 0
  elif [[ "$1" == "delete" ]]; then
    MatrixDeleteAlias "$2" || return 1
    return 0
  fi

  local alias="$1"

  DoResolveAlias() {
    local -A params=(
      [method]="${m_resolve_alias_api[method]}"
      [path]="${m_resolve_alias_api[path]}"
    )
    local response
    Request params response || {
      HandleMatrixError response
      return 1
    }

    local -a keys=(room_id servers)
    local -A values
    ProcessResponse response keys values || return 1

    echo -e "\nRoom ID: ${values[room_id]}"
    echo -e "Servers: ${values[servers]}\n"
  }

  CheckLoginStatus || return 1
  DefineMatrixParams

  [[ ! -z "$alias" ]] || {
    local input_alias
    Read -r -p "$(echo -e -n '\nAlias to resolve:')" input_alias
    alias="$input_alias"
  }
  m_resolve_alias_url_params[alias]="$(EncodeUrl "$alias")"

  ReadConfiguration
  DefineMatrixEndpoints
  DoResolveAlias
}
