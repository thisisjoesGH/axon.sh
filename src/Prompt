Prompt() {
  global_prompt="[axon]>"
  while true; do
    local prompt="$global_prompt"
    read -r -p "$prompt" -a prompt_input
    case "${prompt_input[0]}" in
      help       ) echo "Type 'login' to login or 'exit' to exit.";;
      login      ) MatrixLogin;;
      logout     ) MatrixLogout;;
      whoami     ) MatrixWhoAmI;;
      version    ) SynapseVersion;;
      create     ) SynapseUserCreate;;
      resetpass  ) SynapseUserResetPassword;;
      deactivate ) SynapseUserDeactivate;;
      shadowban  ) SynapseUserShadowban;;
      notice     ) SynapseServerNotice;;
      exit       ) exit 0;;
      *          ) echo "Unrecognized command '$prompt_input'. Type 'help' for help.";;
    esac
  done
}
