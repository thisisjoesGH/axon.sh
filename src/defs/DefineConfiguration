DefineConfiguration() {
  declare -Ag config
  config=(
    [config_path]="$HOME/.axon.sh"
    [config_file]="axon.sh.conf"
    [history_file]="axon.sh.hist"
    [log_path]="$HOME/.axon.sh"
    [log_file]="axon.sh.log"
    [log_level]="INFO"
    [verbosity]="WARN"
    [homeserver]=""
    [scheme]="https"
    [base_url]=""
    [port]="443"
    [admin_user]=""
    [admin_token]=""
    [save_token]="true"
    [device_id]=""
    [save_id]="true"
  )
}
