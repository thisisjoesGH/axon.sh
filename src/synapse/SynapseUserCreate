SynapseUserCreate() {
  Log debug "Got args '$*'"

  DoUserCreate() {
    local request_body
    ReturnRequestBody s_user_create request_body
    Log debug "Assembled request with method '${s__api[method]}', body '$request_body', to be sent to '${s_user_create_api[path]}'"
    local -A params=(
      [method]="${s_user_create_api[method]}"
      [path]="${s_user_create_api[path]}"
      [data]="$request_body"
    )
    Request params || return 1
  }

  CheckLoginStatus || return 1
  CheckServerSupport "${s_user_create_api[minimum_version]}" || return 1
  DefineSynapseParams

  Log info "Creating new user on homeserver ${config[homeserver]}"

  read -r -p "New user name:" input_user_name
    local user_id="@$input_user_name:${config[homeserver]}"
    Log debug "User ID is '$user_id'"
    local user_id="$(EncodeUrl $user_id)"
    Log debug "User ID encoded as '$user_id'"
    s_user_create_url_params[user_id]="$user_id"
    Log debug "URL 'user_id' param set to '${s_user_create_url_params[user_id]}'"
  read -r -p "New user password:" input_user_password
    s_user_create_body_params[password]="$input_user_password"
  read -r -p "Make new user admin? (Y/n):" input_user_is_admin
  case "$input_user_is_admin" in
    [yY]|[Yy][Ee][Ss] ) s_user_create_body_params[admin]="true";;
    [Nn]|[Nn][Oo]     ) s_user_create_body_params[admin]="false";;
  esac

  DefineSynapseEndpoints
  DoUserCreate
}
