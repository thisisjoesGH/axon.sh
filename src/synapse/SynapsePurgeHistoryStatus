SynapsePurgeHistoryStatus() {
  Log debug "Got args '$*'"

  local job_id="$1"

  DoGetPurgeHistoryStatus() {
    Log debug "Assembled request with method '${s_purge_history_status_api[method]}', body '$request_body', to be sent to '${s_purge_history_status_api[path]}'"
    local -A params=(
      [method]="${s_purge_history_status_api[method]}"
      [path]="${s_purge_history_status_api[path]}"
      [keys]="status error"
    )
    Request params || return 1

    echo -e "Purge job status: ${key_values[status]}"
    if [[ "${key_values[status]}" = "failed" ]]; then
      echo -e "Error: '${key_values[error]}'"
    fi
    echo
  }

  CheckLoginStatus || return 1
  CheckServerSupport "${s_purge_history_status_api[minimum_version]}" || return 1
  DefineSynapseParams

  Log info "Getting purge history job status from '${config[homeserver]}'"

  [[ ! -z "$job_id" ]] || {
    read -r -p "Job ID:" input_job_id
    job_id="$input_job_id"
  }
  s_purge_history_status_url_params[job_id]="$job_id"
  Log debug "URL 'job_id' param set to '${s_purge_history_status_url_params[job_id]}'"

  DefineSynapseEndpoints
  DoGetPurgeHistoryStatus
}
